        <Path>zserver.exe</Path>
        <Instancing>singleInstance</Instancing>
        <ActivatableClass ActivatableClassId="zruncomponent.Class" />
      </OutOfProcessServer>
    </Extension>
    </Extensions>
    -->

  <Capabilities>
    <Capability Name="internetClient" />
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>
</Package>
